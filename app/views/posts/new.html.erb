  <%= form_with(model: @post, local: true) do |form| %>
<div class="mb-3">
  <div class="field">
    <%= form.label :image, "画像" %><br />
    <%= form.file_field :image, id:"post_image" %>
  </div>
  <label for="exampleFormControlTextarea1" class="form-label">記事内容</label>


    <%= form.text_area :text, placeholder: "text", rows: "3" , class:"form-control",id: "exampleFormControlTextarea1"%>

    <%= form.submit "SEND" ,class:"btn btn-primary" %>

</div>

<% end %>
