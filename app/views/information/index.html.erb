<p id="notice"><%= notice %></p>

<div class="container">
  <h1>お知らせ一覧</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @information.each do |information| %>
        <tr>
          <td><%= information.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          <td><%= information.content %></td>
          <td><%= link_to 'Show', information, class: 'btn btn-primary btn-sm' %></td>
          <td><%= link_to 'Edit', edit_information_path(information), class: 'btn btn-secondary btn-sm' %></td>
          <td><%= link_to 'Destroy', information, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Information', new_information_path, class: 'btn btn-success' %>
</div>
