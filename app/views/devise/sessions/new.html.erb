<div class='container login'>
  <% breadcrumb :user_login %>



      <h5>登録しているユーザーでログイン</h5>
      <%= render "devise/shared/links"%>


      <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true do |f|%>
        <div class='field'>
          <div class='field-label'>
          <%= f.label :email,class: "form-label"%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email, autofocus: true,class: "form-control w-50"%>

          </div>
          <div class='field'>
            <div class='field-label'>
            <%= f.label :password,class: "form-label"%>
              <i>(英数字6文字以上)</i>
            </div>
            <div class='field-input'>


             <%= f.password_field :password, autocomplete: "off",class: "form-control w-50"%>
            </div>
          </div>
          <div class='actions'>
            <%= f.submit "ログイン", class: 'btn btn-warning mt-2'%>
          </div>
        </div>
      <% end %>


</div>
