<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>Edit Account</h2>
      <h5>アカウントの編集</h5>
      <%= link_to "ログアウト", "#", class: 'btn'%>
      <%= link_to "チャットページに戻る", :back, class: 'btn'%>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: current_user, local: true do |f|%>
        <%= f.file_field :image, class: 'hidden' %>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :name%>
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
           <div class='field'>
          <div class='field-label'>
            <%= f.label :school_name%>
          </div>
          <div class='field-input'>
            <%= f.text_field :school_name%>
          </div>
        </div>

          <div class='field'>
          <div class='field-label'>
            <%= f.label :address%>
          </div>
          <div class='field-input'>
            <%= f.text_field :address%>
          </div>
        </div>

          <div class='field'>
          <div class='field-label'>
            <%= f.label :telephone_number%>
          </div>
          <div class='field-input'>
            <%= f.text_field :telephone_number%>
          </div>
        </div>

             <div class='field'>
          <div class='field-label'>
            <%= f.label :teacher_name%>
          </div>
          <div class='field-input'>
            <%= f.text_field :teacher_name%>
          </div>
        </div>

             <div class='field'>
          <div class='field-label'>
            <%= f.label :school_content%>
          </div>
          <div class='field-input'>
            <%= f.text_field :school_content%>
          </div>
        </div>


        <div class='actions'>
          <%= f.submit "Update", class: 'btn'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
